<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChepaMotos.Views.LiquidationsView">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <Label Text="Liquidaciones"
                   Style="{StaticResource PageHeading}" />

            <!-- Liquidations table -->
            <Border Stroke="{StaticResource Border}"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1"
                    BackgroundColor="{StaticResource Surface}"
                    Padding="0">
                <VerticalStackLayout Spacing="0">

                    <!-- Header -->
                    <Grid ColumnDefinitions="120,*,80,120,120,120"
                          Padding="16,8"
                          BackgroundColor="{StaticResource Surface2}">
                        <Label Grid.Column="0" Text="FECHA" Style="{StaticResource TableHeader}" />
                        <Label Grid.Column="1" Text="MECÁNICO" Style="{StaticResource TableHeader}" />
                        <Label Grid.Column="2" Text="FACT." Style="{StaticResource TableHeader}" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="3" Text="TOTAL" Style="{StaticResource TableHeader}" HorizontalTextAlignment="End" />
                        <Label Grid.Column="4" Text="MECÁNICO (70%)" Style="{StaticResource TableHeader}" HorizontalTextAlignment="End" />
                        <Label Grid.Column="5" Text="TALLER (30%)" Style="{StaticResource TableHeader}" HorizontalTextAlignment="End" />
                    </Grid>

                    <!-- Row 1 -->
                    <Grid ColumnDefinitions="120,*,80,120,120,120" Padding="16,10">
                        <Label Grid.Column="0" Text="2026-02-21" Style="{StaticResource TableCellMono}" />
                        <Label Grid.Column="1" Text="Jose" Style="{StaticResource TableCell}" />
                        <Label Grid.Column="2" Text="4" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="3" Text="$304.100" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" />
                        <Label Grid.Column="4" Text="$212.870" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" TextColor="{StaticResource Green}" />
                        <Label Grid.Column="5" Text="$91.230" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" />
                    </Grid>
                    <BoxView HeightRequest="1" Color="{StaticResource Border}" />

                    <!-- Row 2 -->
                    <Grid ColumnDefinitions="120,*,80,120,120,120" Padding="16,10">
                        <Label Grid.Column="0" Text="2026-02-21" Style="{StaticResource TableCellMono}" />
                        <Label Grid.Column="1" Text="Carlos" Style="{StaticResource TableCell}" />
                        <Label Grid.Column="2" Text="3" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="3" Text="$198.500" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" />
                        <Label Grid.Column="4" Text="$138.950" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" TextColor="{StaticResource Green}" />
                        <Label Grid.Column="5" Text="$59.550" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" />
                    </Grid>
                    <BoxView HeightRequest="1" Color="{StaticResource Border}" />

                    <!-- Row 3 -->
                    <Grid ColumnDefinitions="120,*,80,120,120,120" Padding="16,10">
                        <Label Grid.Column="0" Text="2026-02-20" Style="{StaticResource TableCellMono}" />
                        <Label Grid.Column="1" Text="Jose" Style="{StaticResource TableCell}" />
                        <Label Grid.Column="2" Text="6" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="3" Text="$512.800" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" />
                        <Label Grid.Column="4" Text="$358.960" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" TextColor="{StaticResource Green}" />
                        <Label Grid.Column="5" Text="$153.840" Style="{StaticResource TableCellMono}" HorizontalTextAlignment="End" />
                    </Grid>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentView>
