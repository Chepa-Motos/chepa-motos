<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ═══════════════════════════════════════════════════ -->
    <!-- ChepaMotos — Global Styles                         -->
    <!-- ═══════════════════════════════════════════════════ -->

    <!-- Base page style -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
    </Style>

    <!-- Default label -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="IBMPlexSans" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Default button -->
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
        <Setter Property="FontFamily" Value="IBMPlexSansMedium" />
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="MinimumHeightRequest" Value="40"/>
    </Style>

    <!-- Default entry -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="FontFamily" Value="IBMPlexSans" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
        <Setter Property="MinimumHeightRequest" Value="40"/>
    </Style>

    <!-- Default switch (mecánicos toggle) -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Green}" />
        <Setter Property="ThumbColor" Value="{StaticResource White}" />
    </Style>

    <!-- ─── Named Styles ──────────────────────────────── -->

    <!-- Sidebar nav item label -->
    <Style x:Key="SidebarNavLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontFamily" Value="IBMPlexSansMedium" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="16,10" />
    </Style>

    <!-- Sidebar nav item — selected -->
    <Style x:Key="SidebarNavLabelSelected" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="IBMPlexSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="16,10" />
    </Style>

    <!-- KPI card title (small muted label) -->
    <Style x:Key="KpiTitle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontFamily" Value="IBMPlexSans" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- KPI card value (large monospace) -->
    <Style x:Key="KpiValue" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="IBMPlexMono" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Table header label -->
    <Style x:Key="TableHeader" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontFamily" Value="IBMPlexMono" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Table cell label -->
    <Style x:Key="TableCell" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="IBMPlexSans" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

    <!-- Table cell monospace (IDs, plates, amounts) -->
    <Style x:Key="TableCellMono" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="IBMPlexMono" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

    <!-- Page heading -->
    <Style x:Key="PageHeading" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="IBMPlexSansSemiBold" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <!-- Section heading -->
    <Style x:Key="SectionHeading" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="IBMPlexSansSemiBold" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <!-- Badge base -->
    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 4" />
        <Setter Property="Padding" Value="8,3" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Accent CTA button (Factura de Servicio) -->
    <Style x:Key="CtaAccentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="IBMPlexSansSemiBold" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="14,12" />
        <Setter Property="MinimumHeightRequest" Value="42" />
    </Style>

    <!-- Blue CTA button (Factura de Venta) -->
    <Style x:Key="CtaBlueButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Blue}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="IBMPlexSansSemiBold" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="14,12" />
        <Setter Property="MinimumHeightRequest" Value="42" />
    </Style>

</ResourceDictionary>
