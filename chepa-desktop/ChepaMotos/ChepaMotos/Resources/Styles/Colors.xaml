<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ChepaMotos Design System Colors -->

    <!-- Backgrounds -->
    <Color x:Key="Background">#F2F1ED</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Surface2">#ECEAE4</Color>

    <!-- Borders -->
    <Color x:Key="Border">#D8D5CC</Color>
    <Color x:Key="BorderStrong">#B0ADA4</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#18170F</Color>
    <Color x:Key="TextSecondary">#5C5A52</Color>
    <Color x:Key="TextMuted">#9A9790</Color>

    <!-- Accent (primary action, red) -->
    <Color x:Key="Accent">#C13B0A</Color>
    <Color x:Key="AccentHover">#9E3008</Color>
    <Color x:Key="AccentLight">#F7E8E2</Color>

    <!-- Green (positive, mechanic share) -->
    <Color x:Key="Green">#2A6E44</Color>
    <Color x:Key="GreenLight">#DFF0E8</Color>

    <!-- Blue (venta, delivery) -->
    <Color x:Key="Blue">#1A4A82</Color>
    <Color x:Key="BlueLight">#DDE8F5</Color>

    <!-- Amber (liquidation) -->
    <Color x:Key="Amber">#A85F08</Color>
    <Color x:Key="AmberLight">#FDF0DC</Color>

    <!-- Sidebar -->
    <Color x:Key="Sidebar">#141310</Color>

    <!-- Badge: Anulada -->
    <Color x:Key="AnuladaBg">#FCE8E8</Color>
    <Color x:Key="AnuladaText">#C0392B</Color>

    <!-- Toast -->
    <Color x:Key="ToastBg">#18170F</Color>

    <!-- Utility -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>

</ResourceDictionary>